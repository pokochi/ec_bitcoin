
@{
    ViewData["Title"] = "Index";
}

<form asp-controller="Shop" asp-action="generatePayAdress" method="post">
    <h2>Step 1 - 支払先アドレスの生成</h2>
    <h3>オーダーID</h3>
    <input type="text" name="orderId" value="" />
    <button type="submit">オーダーを作成する</button><br /><br />
    <p>支払先アドレス：@ViewBag.BitcoinAdress</p>
    <img src="@ViewBag.QrUrl" width="200" height="200" />
</form>
<hr />
